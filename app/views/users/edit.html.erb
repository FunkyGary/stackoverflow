<div class="container">
  <div class="row">
    <% if @user.errors.any? %>
      <h4>We have some errors here !</h4>
      <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
      <hr>
     <% end %>
    <%= form_for [@user] do |f| %>
    <div class="container">
      <div class="row">
        <div class="col-md-4">
          <div class="form-group">
            <%= image_tag(@user.avator.url, height:300, width: 300) %>
            <%= f.file_field :avator %>
          </div>
        </div>
        <div class="col-md-8">
          <h2> Edit User Profile </h2>
          <div class="form-group">
            <%= f.text_field :name, class: "form-control", placeholder:"姓名" %>
          </div>
          <div class="form-group">
            <%= f.text_field :intro, class: "form-control", placeholder:"介紹" %>
          </div>
          <div class="form-group">
            <%= f.text_field :title, class: "form-control", placeholder:"職稱" %>
          </div>
          <div class="form-group">
            <%= f.text_field :company, class: "form-control", placeholder:"公司" %>
          </div>
          <div class="form-group">
            <%= f.text_field :website, class: "form-control", placeholder:"網站" %>
          </div>
          <div class="form-group">
            <%= f.text_field :twitter, class: "form-control", placeholder:"Twitter" %>
          </div>
          <div class="form-group">
            <%= f.text_field :github, class: "form-control", placeholder:"Github" %>
          </div>
          <div class="form-group">
            <%= f.submit 'Update', class: "btn btn-primary" %>
          </div>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
