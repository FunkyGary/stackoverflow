<div class="row">
  <div class="col-md-2">
    <h4><%= link_to 'Favorite', favorite_question_path(question), method: :post %></h4>
  </div>
  <div class="col-md-2">
    <h4><%= link_to "answer", question_path(question) %></h4>
  </div>
  <div class="col-md-2">
    <h4>upvote</h4>
  </div>
  <div class="col-md-6">
    <h2><%= question.title %></h2>
    <h3><%= simple_format question.description %></h3>
    <p class="text-right">
      <%= link_to question.user.name, user_path(question.user) %> , <%= question.created_at.to_time.to_s.split('+').first %>
      <% if current_user %>
        <%= link_to "Delete", root_path, method: :delete %>
      <% end %>
    </p>
  </div>
</div>

<hr>
